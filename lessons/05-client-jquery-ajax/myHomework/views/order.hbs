		<input class="ing-check" type="checkbox" value='{{price}}' id='{{id}}'> {{name}}: ${{price}}<br>
	{{else}}
		<input class="ing-check" type="checkbox" value='{{id}}' disabled> {{name}}: ${{price}}<br>
	{{/if}}
{{/each}}
